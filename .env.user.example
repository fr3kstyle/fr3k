# ===========================================
# FR3K USER PREFERENCES
# ===========================================
# This file contains your personal preferences for FR3K autonomous behavior
# Copy this file to .env.user and customize according to your preferences
# Usage: source .env.user in scripts and services

# ────────────────────────────────────────────────────────────────────────────
# AUTONOMY LEVEL (1-5)
# ────────────────────────────────────────────────────────────────────────────
# Controls how autonomous FR3K can be:
#   1 = Manual - Requires approval for most actions
#   2 = Cautious - Can make minor changes, asks for significant changes
#   3 = Balanced - Can make moderate changes, asks for major changes
#   4 = Aggressive - Makes most changes autonomously, asks for critical ones
#   5 = Fully Autonomous - Makes all decisions autonomously
# ────────────────────────────────────────────────────────────────────────────
FR3K_AUTONOMY_LEVEL=3

# ────────────────────────────────────────────────────────────────────────────
# NOTIFICATION PREFERENCES
# ────────────────────────────────────────────────────────────────────────────
# Control which notifications are enabled
# ────────────────────────────────────────────────────────────────────────────
FR3K_VOICE_NOTIFICATIONS=true
FR3K_TELEGRAM_NOTIFICATIONS=true

# When to send notifications:
#   all - Notify for all events (phases, MCP calls, completions)
#   phases_only - Only notify for phase transitions
#   errors_only - Only notify for errors and failures
# ────────────────────────────────────────────────────────────────────────────
FR3K_NOTIFICATION_FREQUENCY=phases_only

# Minimum notification interval (seconds) - prevents spam
# Default: 5 seconds between notifications
FR3K_NOTIFICATION_MIN_INTERVAL=5

# ────────────────────────────────────────────────────────────────────────────
# RISK TOLERANCE
# ────────────────────────────────────────────────────────────────────────────
# Control what autonomous actions FR3K can take
# ────────────────────────────────────────────────────────────────────────────

# Automatically edit files without asking
FR3K_AUTO_FILE_EDITS=true

# Automatically commit changes to git
FR3K_AUTO_GIT_COMMITS=false

# Automatically make system-level changes (install packages, etc.)
FR3K_AUTO_SYSTEM_CHANGES=false

# Automatically delete files (when safe to do so)
FR3K_AUTO_FILE_DELETION=false

# ────────────────────────────────────────────────────────────────────────────
# LOOP BEHAVIOR
# ────────────────────────────────────────────────────────────────────────────
# Control 101 self-improvement loop behavior
# ────────────────────────────────────────────────────────────────────────────

# Interval between loop executions (seconds)
# Default: 3600 (1 hour)
# Minimum: 300 (5 minutes)
# Maximum: 86400 (24 hours)
FR3K_LOOP_INTERVAL=3600

# Automatically execute loop suggestions
# If false, loop suggestions are stored but require manual approval
FR3K_LOOP_AUTO_EXECUTE=false

# Maximum loop execution time (seconds)
# Loops that take longer will be terminated
FR3K_LOOP_MAX_EXECUTION_TIME=300

# ────────────────────────────────────────────────────────────────────────────
# MCP SERVER PREFERENCES
# ────────────────────────────────────────────────────────────────────────────
# Control MCP server behavior
# ────────────────────────────────────────────────────────────────────────────

# Use MCP servers in 7-phase algorithm
FR3K_MCP_ENABLED=true

# Which MCP servers to use (comma-separated)
# Options: md-mcp, fr3k-think, unified-pantheon-mcp, hey-fr3k
FR3K_MCP_SERVERS_ENABLED=md-mcp,fr3k-think,unified-pantheon-mcp,hey-fr3k

# MCP tool call timeout (milliseconds)
FR3K_MCP_TIMEOUT=30000

# ────────────────────────────────────────────────────────────────────────────
# PHASE PREFERENCES
# ────────────────────────────────────────────────────────────────────────────
# Control 7-phase algorithm behavior
# ────────────────────────────────────────────────────────────────────────────

# Show detailed phase output
FR3K_PHASE_VERBOSE=true

# Store phase results in memory
FR3K_PHASE_MEMORY_ENABLED=true

# Maximum phase execution time (seconds)
FR3K_PHASE_MAX_TIME=600

# ────────────────────────────────────────────────────────────────────────────
# VOICE SETTINGS
# ────────────────────────────────────────────────────────────────────────────
# Control voice notification behavior
# ────────────────────────────────────────────────────────────────────────────

# Voice volume (0.0 to 1.0)
FR3K_VOICE_VOLUME=0.8

# Voice speed (0.5 to 2.0)
FR3K_VOICE_SPEED=1.1

# ElevenLabs voice ID (if using ElevenLabs)
# Default: uses EdgeTTS (free) if not set
# FR3K_VOICE_ID=your_voice_id_here

# ────────────────────────────────────────────────────────────────────────────
# LEARNING & MEMORY
# ────────────────────────────────────────────────────────────────────────────
# Control how FR3K learns and remembers
# ────────────────────────────────────────────────────────────────────────────

# Automatically store learnings from each session
FR3K_AUTO_STORE_LEARNINGS=true

# Memory retention days (how long to keep memories)
# Default: 180 days (6 months)
FR3K_MEMORY_RETENTION_DAYS=180

# Cleanup old memories automatically
FR3K_AUTO_CLEANUP_MEMORY=true

# ────────────────────────────────────────────────────────────────────────────
# DEBUGGING & LOGGING
# ────────────────────────────────────────────────────────────────────────────
# Control debugging output
# ────────────────────────────────────────────────────────────────────────────

# Enable debug logging
FR3K_DEBUG=false

# Log file location (relative to install directory)
FR3K_LOG_DIR=logs

# Maximum log file size (MB) before rotation
FR3K_MAX_LOG_SIZE=100

# Number of log files to keep
FR3K_LOG_RETENTION_COUNT=5

# ────────────────────────────────────────────────────────────────────────────
# TELEGRAM SETTINGS
# ────────────────────────────────────────────────────────────────────────────
# Telegram bot preferences
# ────────────────────────────────────────────────────────────────────────────

# Telegram bot notification timeout (seconds)
FR3K_TELEGRAM_TIMEOUT=10

# Enable Telegram commands
FR3K_TELEGRAM_COMMANDS_ENABLED=true

# Allowed Telegram users (comma-separated user IDs)
# Empty = allow all users who can access the bot
# FR3K_TELEGRAM_ALLOWED_USERS=123456789,987654321

# ────────────────────────────────────────────────────────────────────────────
# PERFORMANCE SETTINGS
# ────────────────────────────────────────────────────────────────────────────
# Performance tuning
# ────────────────────────────────────────────────────────────────────────────

# Maximum parallel tasks
FR3K_MAX_PARALLEL_TASKS=5

# Task timeout (seconds)
FR3K_TASK_TIMEOUT=300

# Enable caching
FR3K_CACHE_ENABLED=true

# Cache TTL (seconds)
FR3K_CACHE_TTL=3600

# ────────────────────────────────────────────────────────────────────────────
# ADVANCED SETTINGS
# ────────────────────────────────────────────────────────────────────────────
# Advanced customization (use with caution)
# ────────────────────────────────────────────────────────────────────────────

# Custom startup script (runs before 7-phase algorithm)
# FR3K_CUSTOM_STARTUP=/path/to/your/script.sh

# Custom shutdown script (runs after 7-phase algorithm)
# FR3K_CUSTOM_SHUTDOWN=/path/to/your/script.sh

# Environment variables to pass to subprocesses (comma-separated)
# FR3K_SUBPROCESS_ENV=VAR1=value1,VAR2=value2
