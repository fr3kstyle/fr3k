# ===========================================
# FR3K SYSTEM - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ===========================================
# ANTHROPIC API (Claude Code)
# ===========================================
ANTHROPIC_AUTH_TOKEN=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com
API_TIMEOUT_MS=3000000
CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC=1

# ===========================================
# TELEGRAM BOT TOKENS
# ===========================================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_USER_ID=your_telegram_user_id

# ===========================================
# PAI SYSTEM CONFIGURATION
# ===========================================
PAI_VOICE_SERVER=http://localhost:8888
CLAUDE_CODE_PATH=claude
SESSION_FILE=/tmp/pai-telegram-sessions.json
AUTONOMOUS_ENABLED=true
CHECKIN_INTERVAL_MINUTES=30

# ===========================================
# VOICE SERVER (OPTIONAL)
# ===========================================
# For voice transcription and responses
GEMINI_API_KEY=your_gemini_api_key
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=your_preferred_voice_id
VOICE_OVERVIEW_ENABLED=true
MAX_VOICE_LENGTH=300

# ===========================================
# STORAGE PATHS (Adjust as needed)
# ===========================================
# Main data directory - ensure this exists and is writable
FR3K_DATA_DIR=~/.fr3k
PAI_DIR=~/.claude

# ===========================================
# EXTERNAL SERVICES (OPTIONAL)
# ===========================================
# Supabase for memory persistence
# SUPABASE_URL=your_supabase_url
# SUPABASE_ANON_KEY=your_supabase_anon_key

# ===========================================
# SECURITY
# ===========================================
# Skip dangerous mode prompt (use with caution)
SKIP_DANGEROUS_MODE_PROMPT=true
