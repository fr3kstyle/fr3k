# FR3K Telegram Bot Configuration
# Copy to .env and fill in your values

# Required
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_USER_ID=your_telegram_user_id

# PAI Configuration
PAI_VOICE_SERVER=http://localhost:8888
CLAUDE_CODE_PATH=claude

# Session Storage
SESSION_FILE=/tmp/pai-telegram-sessions.json

# Autonomous Agent
AUTONOMOUS_ENABLED=true
CHECKIN_INTERVAL_MINUTES=30

# Enhanced Voice
VOICE_OVERVIEW_ENABLED=true
MAX_VOICE_LENGTH=300

# Optional APIs (for extended features)
# GEMINI_API_KEY=your_gemini_key
# ELEVENLABS_API_KEY=your_elevenlabs_key
# ELEVENLABS_VOICE_ID=your_voice_id

# AWS (if using AWS services)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=

# Google (if using Google services)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_REDIRECT_URI=
